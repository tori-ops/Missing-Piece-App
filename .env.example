# ============================================================================
# SUPABASE DATABASE
# ============================================================================
# Local development: use local Supabase instance
# Production: replace with Supabase project URL

DATABASE_URL="postgresql://postgres:postgres@localhost:54321/postgres"

# ============================================================================
# NEXTAUTH.JS CONFIGURATION
# ============================================================================
# Generate a new secret: openssl rand -base64 32

NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Using Gmail SMTP for development
# For production: use a service like SendGrid, Mailgun, etc.

SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="The Missing Piece <noreply@missingpiece.com>"

# ============================================================================
# SUPABASE STORAGE
# ============================================================================
# For avatar uploads and file storage

NEXT_PUBLIC_SUPABASE_URL="http://localhost:54321"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================================================
# APPLICATION
# ============================================================================

NODE_ENV="development"
APP_BASE_URL="http://localhost:3000"
VERCEL_ENV="development"

# ============================================================================
# OAUTH PROVIDERS (Optional)
# ============================================================================
# Get credentials from respective provider dashboards

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================

DEBUG="false"
LOG_LEVEL="info"
